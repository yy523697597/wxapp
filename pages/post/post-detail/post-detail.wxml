<view class="container">
  <image class="header-image" src="{{headImage}}"></image>
  <image class="audio" src="/img/music/music-start.png"></image>
  <view class="author-data">
    <image class="author-image" src="{{avatar}}"></image>
    <text class="author">{{author}}</text>
    <text class="const-text">发表于</text>
    <text class="date">{{dateTime}}</text>
  </view>
  <text class="title">{{title}}</text>
  <view class="tool">
    <view class="circle-image">
      <image class="" src="/img/icon/collection.png"></image>
      <image class="share-image" src="/img/icon/share.png"></image>
    </view>
    <view class="horizon"></view>
  </view>
  <text class="detail">{{detail}}</text>
</view>